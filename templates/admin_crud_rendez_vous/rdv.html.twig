{% extends '/base.html.twig' %}

{% block title %}Liste Rendez Vous{% endblock %}

{% block body %}
    <h2>Rendez Vous Cabinet</h2>

    <table class="table table-bordered text-center mt3">
        <thead>
            <tr>
                <th>nom patient</th>
                <th>prenom patient</th>
